# =========================================
# generator_bot — приклад .env
# (створено за діючим config.py)
# =========================================

# --- КЛЮЧІ (ОБОВ'ЯЗКОВО) ---
BOT_TOKEN=PUT_YOUR_TELEGRAM_BOT_TOKEN_HERE

# --- DB BACKEND ---
# sqlite | postgres (дефолт: sqlite)
DB_BACKEND=sqlite

# SQLite файл (для DB_BACKEND=sqlite)
SQLITE_PATH=generator.db

# Postgres (для DB_BACKEND=postgres)
POSTGRES_DSN=postgresql://app_user:app_pass@localhost:5432/generator_bot

# (Опційно, але рекомендовано)
# Адмін DSN потрібен, щоб створити БД, якщо її ще немає (CREATE DATABASE).
# Має вказувати на існуючу системну БД (зазвичай postgres).
POSTGRES_ADMIN_DSN=postgresql://postgres:postgres@localhost:5432/postgres

# --- REDIS ---
# 1 = використовуємо Redis як FSM storage (aiogram)
REDIS_ENABLED=0
REDIS_URL=redis://localhost:6379/0

# --- GOOGLE SHEETS (ОБОВ'ЯЗКОВО) ---
# В config.py валідатор вимагає наявність обох змінних,
# а який саме ID буде використано — залежить від MODE.
SHEET_ID_PROD=PUT_YOUR_PROD_SHEET_ID_HERE
SHEET_ID_TEST=PUT_YOUR_TEST_SHEET_ID_HERE

# Назва вкладки з основними даними (дефолт: "ЛЮТИЙ")
SHEET_NAME=ЛЮТИЙ

# Окрема вкладка для журналу подій (дефолт: "ПОДІЇ")
LOGS_SHEET_NAME=ПОДІЇ

# --- РЕЖИМ ---
# TEST або PROD (дефолт: TEST)
MODE=TEST

# --- ЧАС ТА МІСЦЕ ---
# Дефолт: Europe/Kyiv
TIMEZONE=Europe/Kyiv

# --- ГРАФІК РОБОТИ ---
# Дефолти: 07:30 / 20:30 / 07:30
WORK_START=07:30
WORK_END=20:30
BRIEF_TIME=07:50

# --- ТЕХНІКА ---
# Ліміт ТО в годинах (дефолт: 100)
OIL_LIMIT=100

# --- ДОСТУП (ОБОВ'ЯЗКОВО: ADMINS) ---
# ID адмінів через кому
ADMINS=1962821395

# ON - вільна реєстрація, OFF - тільки whitelist (дефолт: ON)
BOT_STATUS=ON

# Білий список користувачів (ID через кому), дефолт: порожньо
USERS=

# --- ПАЛИВО ---
# Літрів/год (якщо не задано або некоректне — буде 5.3)
FUEL_RATE=6

# Поріг алерту палива в літрах (дефолт: 40)
FUEL_ALERT_THRESHOLD=40

# Анти-спам алерту, хв (дефолт: 60)
FUEL_ALERT_COOLDOWN_MIN=60

# Нагадування "натисніть СТОП" за N хв до WORK_END (дефолт: 15)
STOP_REMINDER_MIN=15
